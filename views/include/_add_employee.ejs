
<div class="modal" id="addEmployeeModal">
    <form class="main_modal" id="addEmployeeForm">
        <div class="row modal_heading">
            <div class="col-11">
                <h4>Add Employee</h4>
            </div>
            <div class="col-1 modal_heading_btn">
                <button type="button" class="modal_btn" id="closeButton" onclick="closeAddEmployee()">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </button>
            </div>
        </div>
        <div class="row ">
            <div class="col img_row" id="imgUpload">
                <label for="fileUpload" class="custom-file-upload" id="imgPreview"></label>
                <i class="fa-solid fa-arrow-up-from-bracket"></i>
                <h6>Upload Image</h6>
                <p>PNG, JPG files are allowed</p>
                <input type="file" name="image" accept="image/*" id="fileUpload" />
                <!-- </label> -->
            </div>
            <div class="on-image-selected" id="imageSection">
                <div id="image_preview"></div>
                <button class="btn" type="button" onclick="uploadUserImage.click()">Change</button>
            </div>
        </div>

        <div class="row select_input">
            <div class="col-md-4 selection">
                <p>Salutation <span>*</span></p>
                <select class="form-select" name="salutation" aria-label="Default select example"
                    id="salutationValue">
                    <option value="" selected disabled>Select</option>
                    <option value="Mr">Mr</option>
                    <option value="Mrs">Mrs</option>
                    <option value="Mrs">Mrs</option>
                </select>
                <label for="salutationValue" id="salutationValidation" class="validation-label"></label>
            </div>
            <div class="col-md-4">
                <p>First Name <span>*</span></p>
                <input type="text" name="firstName" class="form-control" placeholder="First Name"
                    aria-label="First name" id="firstNameValue">
                <label for="firstNameValue" id="firstNameValidation" class="validation-label"></label>
            </div>
            <div class="col-md-4">
                <p>Last Name <span>*</span></p>
                <input type="text" name="lastName" class="form-control" placeholder="Last name "
                    aria-label="First name" id="lastNameValue">
                <label for="lastNameValue" id="lastNameValidation" class="validation-label"></label>
            </div>
        </div>

        <div class="row contact_input">
            <div class="col-md">
                <p>Email Address <span>*</span></p>
                <input type="email" name="email" class="form-control" placeholder="mail@simmmple.com"
                    aria-label="First name" id="emailValue">
                <label for="emailValue" id="emailValidation" class="validation-label"></label>
            </div>
            <div class="col-md">
                <p>Mobile Number <span>*</span></p>
                <input type="number" name="phone" class="form-control" placeholder="enter mobile number"
                    aria-label="Last name" id="phoneValue">
                <label for="phoneValue" id="phoneValidation" class="validation-label"></label>
            </div>
        </div>

        <div class="row ">
            <div class="col-md personal_info">
                <p>Date of Birth <span>*</span></p>
                <input type="date" name="dob" class="form-control" aria-label="First name" id="dobValue">
                <label for="dobValue" id="dobValidation" class="validation-label"></label>
            </div>
            <div class="col-md">
                <p>Gender <span>*</span> </p>
                <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault2" value="Male">
                <label class="form-check-label radio_btn" for="flexRadioDefault2">
                    Male
                </label>

                <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" value="Female">
                <label class="form-check-label radio_btn" for="flexRadioDefault1">
                    Female
                </label>
                <label for="flexRadioDefault2" id="genderValidation" class="validation-label"></label>
            </div>
        </div>

        <div class="row contact_input">
            <div class="col-md">
                <p>Address <span>*</span></p>
                <input type="text" name="address" class="form-control" placeholder="enter address"
                    aria-label="Last name" id="addressValue">
                <label for="addressValue" id="addressValidation" class="validation-label"></label>
            </div>
        </div>

        <div class="row contact_input">
            <div class="col-md">
                <p>Qualifications<span>*</span></p>
                <input type="text" name="qualifications" class="form-control" placeholder="enter qualifications"
                    aria-label="Last name" id="qualificationsValue">
                <label for="qualificationsValue" id="qualificationsValidation" class="validation-label"></label>
            </div>
        </div>

        <div class="row select_input">
            <div class="col-md selection">
                <p>Country <span>*</span></p>
                <select class="form-select" name="country" aria-label="Default select example" id="countryValue">
                    <option value="" selected disabled>Select country</option>
                    <option value="India">India</option>
                    <option value="USA">USA</option>
                    <option value="Russia">Russia</option>
                </select>
                <label for="countryValue" id="countryValidation" class="validation-label"></label>
            </div>
            <div class="col-md selection">
                <p>State <span>*</span></p>
                <select class="form-select" name="state" aria-label="Default select example" id="stateValue">
                    <option value="" selected disabled>Select State</option>
                    <option value="Kerala">Kerala</option>
                    <option value="Tamilnadu">Tamilnadu</option>
                    <option value="Karnataka">Karnataka</option>
                </select>
                <label for="stateValue" id="stateValidation" class="validation-label"></label>
            </div>
        </div>

        <div class="row contact_input">
            <div class="col-md">
                <p>City <span>*</span></p>
                <input type="text" name="city" class="form-control" placeholder="enter city" aria-label="Last name"
                    id="cityValue">
                <label for="cityValue" id="cityValidation" class="validation-label"></label>
            </div>
            <div class="col-md">
                <p>Pin/Zip <span>*</span></p>
                <input type="text" name="pin" class="form-control" placeholder="enter zip/pin"
                    aria-label="Last name" id="pinValue">
                <label for="pinValue" id="pinValidation" class="validation-label"></label>
            </div>
        </div>

        <div class="row contact_input">
            <div class="col-md">
                <p>User Name <span>*</span></p>
                <input type="text" name="userName" class="form-control" placeholder="enter User Name"
                    aria-label="Last name" id="userNameValue">
                <label for="userNameValue" id="userNameValidation" class="validation-label"></label>
            </div>
            <div class="col-md">
                <p>Password <span>*</span></p>
                <input type="password" name="password" class="form-control" placeholder="enter password"
                    aria-label="Last name" id="passwordValue">
                <label for="passwordValue" id="passwordValidation" class="validation-label"></label>
            </div>
        </div>
        <div class="row">
            <div class="col modal_footer" id="modalFooter">
                <button type="button" class="footer_btn empty" id="cancelButton"
                    onclick="closeAddEmployee()">Cancel</button>
                <button type="submit" id="submitButton" class="footer_btn filled">Add Employee</button>
            </div>
        </div>
    </form>
</div>